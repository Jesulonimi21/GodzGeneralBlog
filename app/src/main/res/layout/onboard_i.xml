<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/onboard_bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/onboard_text_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:maxWidth="300dp"
        android:text="Explore"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/onboard_text_title"
        android:src="@drawable/onboard_img_i"
        android:id="@+id/onboard_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/onboard_text"
        app:layout_constraintTop_toBottomOf="@+id/onboard_image"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:maxWidth="300dp"
        android:text="Find the latest news around the globe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>